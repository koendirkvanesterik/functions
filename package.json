{
  "name": "@koendirkvanesterik/functions",
  "private": true,
  "version": "0.0.0",
  "dependencies": {
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^12.0.1",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.6",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "check-dependencies": "^1.1.0",
    "commitlint": "^12.0.1",
    "eslint": "^7.17.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "standard-version": "^9.1.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "lint-staged": {
    "**/*.ts{,x}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "**/*.json": [
      "prettier --write"
    ],
    "**/*.js": [
      "prettier --write"
    ],
    "**/*.md": [
      "prettier --write"
    ],
    "**/*.y{,a}ml": [
      "prettier --write"
    ]
  },
  "scripts": {
    "format": "prettier --check '**/*.{ts,tsx,json,md,js,yml}'",
    "format:fix": "prettier --write '**/*.{ts,tsx,json,md,js,yml}'",
    "lint": "eslint --cache --ext .ts,.tsx packages",
    "prepare": "husky install",
    "test": "jest",
    "test:coverage": "jest --coverage --collectCoverageFrom=packages/**/*.{ts,tsx} --collectCoverageFrom=!packages/**/{*.d.ts,index.ts,types.ts}",
    "test:types": "tsc -p . --noEmit"
  },
  "standard-version": {
    "scripts": {
      "postchangelog": "prettier --write CHANGELOG.md"
    }
  }
}
